{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es2020", "dom"],
        "module": "AMD",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "build",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["react-src/ts/**/*"],
    "exclude": ["node_modules", "vendor"]
}
